<!DOCTYPE html>
<html>
  <head>
    <title>ForeverNote</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      <% if logged_in? %>
        window.currentUser = <%= render(
          "api/users/user.json.jbuilder",
          user: current_user
        ).html_safe %>
      <% end %>

      window.images = {
        LOGOUT: "<%= image_path("logout.png") %>",
        ADD: "<%= image_path("addnote.png") %>",
        NOTEBOOKS: "<%= image_path("notebooks.png") %>",
        NOTES: "<%= image_path("notes.png") %>",
        TAGS: "<%= image_path("tags.png") %>",
      }


    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
